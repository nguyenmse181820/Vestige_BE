# Production Environment Configuration Template
# Copy this to .env.production and update with your actual values

# ===== STRIPE CONFIGURATION =====
# ⚠️  IMPORTANT: Replace with your actual live Stripe keys
# Live keys start with sk_live_ and pk_live_
STRIPE_SECRET_KEY=sk_live_your_live_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_live_your_live_publishable_key_here

# Production webhook secret (get from Stripe dashboard)
# Must point to: https://your-domain.com/api/stripe/webhook
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret_here

# ===== APPLICATION CONFIGURATION =====
# Production URLs - Update with your actual domains
FRONTEND_URL=https://vestige.com
BACKEND_URL=https://api.vestige.com

# Spring Profile
SPRING_PROFILES_ACTIVE=prod

# ===== DATABASE CONFIGURATION =====
# Update with your production database credentials
DATABASE_URL=jdbc:postgresql://your-prod-db-host:5432/vestige_prod
DATABASE_USERNAME=your_prod_db_username
DATABASE_PASSWORD=your_prod_db_password

# ===== SECURITY CONFIGURATION =====
JWT_SECRET=your_256_bit_production_jwt_secret_here
JWT_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=86400000

# ===== CORS CONFIGURATION =====
CORS_ALLOWED_ORIGINS=https://vestige.com,https://www.vestige.com
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=*

# ===== SERVER CONFIGURATION =====
SERVER_PORT=8080

# ===== LOGGING LEVEL =====
LOGGING_LEVEL_ROOT=WARN
LOGGING_LEVEL_VESTIGE=INFO
